{{#each blog}}
<br><br>
<div class="card">
  <div class="card-header">
      <h1>{{title}}</h1>
      <h2>Created on: {{format_date createdAt }}</h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
     <h2>{{content}}</h2>
    </blockquote>
  </div>
</div>
<br><br>
{{/each}}
  <div class="col-md-8">
        <div class="card">
        <h4>Leave a comment</h4>
        <form class="form comment-form">
            <div class="form-group">
                <input class="form-input" type="text" id="comment-body"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Comment</button>
            </div>
        </form>
        </div>
    </div>